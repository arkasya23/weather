        <TextBox x:Name ="cityy" Text="{Binding Path=Name}" HorizontalAlignment="Left" Height="23" Margin="571.158,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="3"/>
